<!-- views/index.ejs - Home Page -->


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% if (typeof error !== 'undefined') { %>
    <div class="error">
        <i class="fas fa-exclamation-triangle"></i> <%= error %>
    </div>
<% } %>

<div class="card">
    <h2 style="text-align: center; margin-bottom: 30px; color: #333;">
        <i class="fas fa-pen-fancy"></i> Create Your Comic
    </h2>
    
    <form action="/generate" method="POST">
        <div style="margin-bottom: 25px;">
            <label for="topic" style="display: block; margin-bottom: 10px; font-weight: 600; color: #555;">
                <i class="fas fa-lightbulb"></i> Comic Topic:
            </label>
            <input 
                type="text" 
                id="topic" 
                name="topic" 
                placeholder="e.g., A robot learning about friendship, Pirates searching for treasure..."
                required
                style="width: 100%; padding: 15px; border: 2px solid #ddd; border-radius: 10px; font-size: 16px; transition: border-color 0.3s;"
                onfocus="this.style.borderColor='#667eea'"
                onblur="this.style.borderColor='#ddd'"
            >
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 25px;">
            <div>
                <label for="genre" style="display: block; margin-bottom: 10px; font-weight: 600; color: #555;">
                    <i class="fas fa-theater-masks"></i> Genre:
                </label>
                <select 
                    id="genre" 
                    name="genre"
                    style="width: 100%; padding: 15px; border: 2px solid #ddd; border-radius: 10px; font-size: 16px;"
                >
                    <option value="adventure">Adventure</option>
                    <option value="superhero">Superhero</option>
                    <option value="fantasy">Fantasy</option>
                    <option value="sci-fi">Sci-Fi</option>
                    <option value="comedy">Comedy</option>
                    <option value="romance">Romance</option>
                    <option value="horror">Horror</option>
                    <option value="mystery">Mystery</option>
                </select>
            </div>

            <div>
                <label for="panels" style="display: block; margin-bottom: 10px; font-weight: 600; color: #555;">
                    <i class="fas fa-th-large"></i> Number of Panels:
                </label>
                <select 
                    id="panels" 
                    name="panels"
                    style="width: 100%; padding: 15px; border: 2px solid #ddd; border-radius: 10px; font-size: 16px;"
                >
                    <option value="4">4 Panels</option>
                    <option value="6" selected>6 Panels</option>
                    <option value="8">8 Panels</option>
                    <option value="10">10 Panels</option>
                </select>
            </div>
        </div>

        <div style="margin-bottom: 30px;">
            <label for="style" style="display: block; margin-bottom: 10px; font-weight: 600; color: #555;">
                <i class="fas fa-palette"></i> Art Style:
            </label>
            <select 
                id="style" 
                name="style"
                style="width: 100%; padding: 15px; border: 2px solid #ddd; border-radius: 10px; font-size: 16px;"
            >
                <option value="modern comic book" selected>Modern Comic Book</option>
                <option value="manga">Manga</option>
                <option value="classic comic">Classic Comic</option>
                <option value="cartoon">Cartoon</option>
                <option value="realistic">Realistic</option>
                <option value="anime">Anime</option>
                <option value="dark gothic">Dark Gothic</option>
                <option value="watercolor">Watercolor</option>
            </select>
        </div>

        <div style="text-align: center;">
            <button type="submit" class="btn" style="font-size: 18px; padding: 20px 40px;">
                <i class="fas fa-magic"></i> Generate Comic
            </button>
        </div>
    </form>
</div>

<div class="card">
    <h3 style="margin-bottom: 20px; color: #333;">
        <i class="fas fa-info-circle"></i> How it works:
    </h3>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
        <div style="text-align: center; padding: 20px;">
            <i class="fas fa-edit" style="font-size: 3rem; color: #667eea; margin-bottom: 15px;"></i>
            <h4>1. Enter Your Idea</h4>
            <p>Describe your comic topic and choose your preferred style</p>
        </div>
        <div style="text-align: center; padding: 20px;">
            <i class="fas fa-robot" style="font-size: 3rem; color: #ff6b6b; margin-bottom: 15px;"></i>
            <h4>2. AI Creates Story</h4>
            <p>Our AI generates characters, plot, and dialogue</p>
        </div>
        <div style="text-align: center; padding: 20px;">
            <i class="fas fa-image" style="font-size: 3rem; color: #2ed573; margin-bottom: 15px;"></i>
            <h4>3. Generate Images</h4>
            <p>AI creates stunning visuals for each panel</p>
        </div>
        <div style="text-align: center; padding: 20px;">
            <i class="fas fa-download" style="font-size: 3rem; color: #ffa500; margin-bottom: 15px;"></i>
            <h4>4. Enjoy Your Comic</h4>
            <p>View, share, or download your completed comic</p>
        </div>
    </div>
</div>
</body>
</html>
